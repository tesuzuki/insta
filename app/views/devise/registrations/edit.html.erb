<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <div class="well bs-component">
        <fieldset>
          <legend>Edit <%= resource_name.to_s.humanize %></legend>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

              <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">Email</label>
                <div class="col-lg-10">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true %>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>
                </div>
              </div>
              
              <div class="form-group">
              <!-- 名前入力用のフィールドを追加 -->
                <label for="textArea" class="col-lg-2 control-label">Name</label>
                <div class="col-lg-10">
                  <%= f.label :名前 %><br />
                  <%= f.text_field :name, class: "form-control" %>
                </div>
              </div>
              
              <% if @user.provider.blank? %>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>
                
                <div class="form-group">
                  <label for="inputPassword" class="col-lg-2 control-label">Password</label>
                  <div class="col-lg-10">
                    <%= f.label :password %><i>(leave blank if you don't want to change it)</i><br />
                    <%= f.password_field :password, autocomplete: "off" %>
                    <% if @minimum_password_length %>
                      <br />
                      <em><%= @minimum_password_length %> characters minimum</em>
                    <% end %>
                  </div>
                </div>
              
                <div class="form-group">
                  <label for="inputPassword" class="col-lg-2 control-label">Password</label>
                  <div class="col-lg-10">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off" %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="inputPassword" class="col-lg-2 control-label">Password</label>
                  <div class="col-lg-10">
                    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                    <%= f.password_field :current_password, autocomplete: "off" %>
                  </div>
                </div>
              <% end %>
                
              <div class="form-group">
                <div class="col-lg-10">
                  <%= profile_img(@user) if profile_img(@user) %>
                  <%= f.file_field :avatar %>
                  <%= f.hidden_field :avatar_cache %>
                </div>
              </div>
                
              <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                  <%= f.submit "Update",class: "btn btn-primary" %>
                </div>
              </div>
          <% end %>
          
          <div class="col-lg-10 col-lg-offset-2">
            <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class: "btn btn-primary" %></p>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>
<%= link_to "Back", :back %>
