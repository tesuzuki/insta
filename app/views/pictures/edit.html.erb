<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <div class="well bs-component">
                <fieldset>
                    <legend>投稿編集画面</legend>
                        <%= form_for(@picture, url: choose_new_or_edit) do |f| %>
                            <%= image_tag picture_path(@picture), class: "middle-img" %>
                            <div class="form-group">
                                <%= f.file_field :file,accept: "image/jpeg"  %>
                                <%= f.hidden_field :user_id, :value => current_user.id%>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <%= f.text_field :content , class: "form-control" , id: "textArea" , :placeholder => @picture.content %> 
                                </div>
                            </div>
                            <%= f.submit "アップロードする" ,class: "btn btn-primary" %>
                        <% end %>
                </fieldset>
            </div>
        </div>
    </div>
</div>
